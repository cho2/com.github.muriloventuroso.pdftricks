{
    "app-id": "com.github.muriloventuroso.pdftricks",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.30",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.pdftricks",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland"
    ],

    "modules": [
        {
            "name": "libpng",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "__comment": "Must be version 1.2.x",
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/libpng/libpng12/1.2.59/libpng-1.2.59.tar.xz",
                    "sha256": "b4635f15b8adccc8ad0934eea485ef59cc4cae24d0f0300a9a941e51974ffcc7"
                }
            ]
        },
        {
            "name": "ghostscript",
            "config-opts": [ "--disable-cups" ],
            "make-args": [ "so" ],
            "make-install-args": [ "soinstall" ],
            "cleanup": [
                "/share/ghostscript/9.25/doc/",
                "/share/ghostscript/9.25/examples",
                "/bin/dvipdf",
                "/bin/font2c",
                "/bin/gsbj",
                "/bin/gsdj500",
                "/bin/gslp",
                "/bin/lprsetup.sh",
                "/bin/pdf2ps",
                "/bin/pf2afm",
                "/bin/printafm",
                "/bin/ps2epsi",
                "/bin/ps2pdfwr",
                "/bin/ps2pdf13",
                "/bin/wftopfa",
                "/bin/eps2eps",
                "/bin/gsdj",
                "/bin/gslj",
                "/bin/gsnd",
                "/bin/pdf2dsc",
                "/bin/pfbtopfa",
                "/bin/pphs",
                "/bin/ps2ascii",
                "/bin/ps2pdf",
                "/bin/ps2pdf12",
                "/bin/ps2pdf14",
                "/bin/ps2ps2",
                "/bin/unix-lpr.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs925/ghostscript-9.25.tar.gz",
                    "sha512": "6710bf00e6246bf07173d4012c7742dd2315b6888b883d63372c0dc2fef76e8be5672f10e4c529244ba153f4ae8ab713403209365a3f7a76c469d69d797761b1"
                },
                {
                    "type": "shell",
                    "commands": ["rm -rf libpng/pngread.c"]
                }
            ]
        },
        {
      "name": "imagemagick",
          "config-opts": [
            "--enable-static=yes",
            "--disable-docs",
            "--with-png",
            "--with-jpeg",
            "--with-zlib",
            "--enable-zero-configuration"
          ],
          "sources": [
            {
                "type": "archive",
                "url": "https://www.imagemagick.org/download/ImageMagick.tar.xz",
                "sha256": "d3a27259d9294488b042d96fde64f05e01b4b4e94478a6f19ecaa8032c71878b"
            },
            {
                "type": "shell",
                "commands": [
                    "sed -i '32a <policy domain=\\\\\"coder\\\\\" rights=\\\\\"read | write\\\\\" pattern=\\\\\"PDF\\\\\"/> \\\\' MagickCore/policy-private.h"
                ]
            }
          ]
        },
        {
            "name": "pdftricks",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/pdftricks/archive/0.2.1.tar.gz",
                    "sha256": "07e198ca791b2de35a4a078c262ccd30676409523be7d6034c806cac87b75813"
                },
                {
                    "type": "patch",
                    "path": "apply-eos-theme"
                }
            ]
        }
    ]
}


