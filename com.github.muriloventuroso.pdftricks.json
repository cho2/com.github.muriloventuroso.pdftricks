{
    "app-id": "com.github.muriloventuroso.pdftricks",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.30",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.pdftricks",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "build-options": {
        "cflags": "-O2",
        "cxxflags": "-O2"
    },

    "modules": [
        {
            "name": "ghostscript",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs926/ghostscript-9.26-linux-x86_64.tgz",
                    "sha256": "3fb505449fc17b708a6e887b6da19197f923d488961cf908eb458124d8ce9d95"
                }
            ]
        },

        {
            "name": "easyssh",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/pdftricks/archive/0.1.2.tar.gz",
                    "sha256": "6d70ceca001a2037648729a810ea40cc1dd536ae8531e6ce9d14519ac4fe7b5a"
                }
            ]
        }
    ]
}


