{
    "app-id": "com.github.muriloventuroso.pdftricks",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.30",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.pdftricks",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],

    "modules": [
        {
            "name": "ghostscript",
            "config-opts": [ "--disable-cups" ],
            "make-args": [ "so" ],
            "make-install-args": [ "soinstall" ],
            "cleanup": ["/share/ghostscript/9.25/doc/", "/share/ghostscript/9.25/examples" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs925/ghostscript-9.25.tar.gz",
                    "sha512": "6710bf00e6246bf07173d4012c7742dd2315b6888b883d63372c0dc2fef76e8be5672f10e4c529244ba153f4ae8ab713403209365a3f7a76c469d69d797761b1"
                }
            ]
        },
        {
            "name": "pdftricks",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/pdftricks/archive/0.1.3.tar.gz",
                    "sha256": "5848ad1ecb0e1037d02203d010135c43b17108f40ab6376cb3a65482ba61ec14"
                }
            ]
        }
    ]
}


